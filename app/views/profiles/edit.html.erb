<div class="row">
    <div class="col-md-2">
      <%= render 'statuses/profile_info' %>
    </div>
    <div class="col-md-5" style="margin-top:30px;">
    	<div class="row">
	  		<div class="col-md-4"> <p style="font-size:18px; "> <%= current_user.statuses.count %></p>
				<p style="font-size:18px; color:#9e9e9e">Posts</p></div>

			<div class="col-md-4"> <p style="font-size:18px;"> <%= current_user.friends.count %> </p>
				<p style="font-size:18px; color:#9e9e9e">Friends</p></div>

			<div class="col-md-4"> <p style="font-size:18px;"> <%= current_user.followers.count %><br></p>
				<p style="font-size:18px; color:#9e9e9e"> Followers</p></div>
		</div>
		<%= form_tag(profile_profile_params_path(current_user), method: 'put', multipart: true) do %>

			  <h4>A brief about yourself</h4>

			  <div class="row">
			    <div class="col-xs-6 col-md-6">
			    	<%= text_area_tag "body", @a_brief_about_yourself, style: "width: 213%; height: 120px;", placeholder: "A Brief About Yourself", :class => 'form-control'%>
			    </div>
			  </div> 

			 <br>

			 <h4>Work Experience</h4>
			  <div class="row">
			    <div class="col-xs-6 col-md-6"> <%= text_field_tag :companyName , @work_experience_companyName, class: 'form-control', placeholder: "Company Name"%></div>
			    <div class="col-xs-6 col-md-6"> <%= text_field_tag :designation , @work_experience_designation, class: 'form-control', placeholder: "Designation"%></div>
			  </div>

			  <br>

			  <div class="row">
			    <div class="col-xs-6 col-md-6">
			    	<%= text_field_tag :locationW,  @work_experience_locationW, class: 'form-control', placeholder: "Location" %>
			    </div>
			  </div>
			  <br>

				<h4>Educational Details</h4>
				<div class="row">
					<div class="col-xs-6 col-md-6"> <%= text_field_tag :collageName , @educational_detail_collageName, class: 'form-control', placeholder: "College Name"%></div>

					<div class="col-xs-6 col-md-6"> <%= text_field_tag :courseName , @educational_detail_courseName, class: 'form-control', placeholder: "Couse Name"%></div>
				</div>

				<br>

				<div class="row">
					<div class="col-xs-6 col-md-6">
					<%= text_field_tag :locationE , @educational_detail_locationE, class: 'form-control', placeholder: "Location"%>
					</div>
				</div>
				<br>

				<h4>Define your interests</h4>
				<div clasS="row">
					<div class="col-xs-8 col-md-8"> <%= text_field_tag :interest_list , @interest_list, class: 'form-control', placeholder: "Type your interests separated by commas"%></div>
				</div>

				<br>
				
			  <div class="actions">
			    <%= button_tag(type: "submit", class: "btn btn-info dropdown-toggle") do %>
			    Save Details  
			    <% end %>
			  </div>

		<% end %>
	</div>
	<%= form_for(resource, as: resource_name, html: { class: 'form-horizontal', method: :put }) do |f| %>
		<div class="col-md-5" style="margin-top:30px;">
			<legend>Profile image </legend>

		    <div class="form-group">
		        <%= f.label :avatar, "Attach image", class: 'col-lg-2 control-label long-label' %>
		        <div class="col-lg-10">
		          <%= f.file_field :avatar, class: "image-upload" %>
		        </div>
		    </div>
		    <br>
		    <div class="actions">
		       <%= f.button "Update", class: 'btn btn-primary btn-lg btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating..." } %>
		    </div>
		</div>
	<% end %>
</div>

