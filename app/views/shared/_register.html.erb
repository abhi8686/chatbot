<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>                    

          <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-circle-o-notch fa-fw"></i></span>
                <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "First Name" %>
          </div>
                    
          <br />
          <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-undo fa-fw"></i></span>
                <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: "Last Name" %>                  
          </div>
          <br />
          <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-tag fa-fw"></i></span>
                <%= f.text_field :profile_name, autofocus: true, class: 'form-control', placeholder: "Profile Name" %>            
          </div>
          <br />
          <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                <%= f.email_field :email, class: 'form-control', placeholder: "Email address" %>
          </div>
          <br />
          <div class="input-group margin-bottom-sm">
            <span class="input-group-addon"><i class="fa fa-lock fa-fw "></i></span>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>

          <% if @validatable %>
              <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
          <% end %>               
          </div>
                    
          <br />
          <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-lock fa-fw "></i></span>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm password" %>                   
          </div>
          <br />
          <div class="actions">
            <%= f.button "Register", class: 'btn btn-success btn-block', data: { disable_with: "<i class='fa fa-spinner fa-pulse'></i> Registering..." } %>
          </div>
          <br />
          <div class="division">
                <div class="line l"></div>
                  <span> or </span>
                <div class="line r"></div>
          </div>

          <div class="social">
              <a class="circle linkedin" href="<%= user_omniauth_authorize_path(:linkedin) %>">
                <i class="fa fa-linkedin fa-fw"></i>
              </a>
              <a class="circle twitter" href="<%= user_omniauth_authorize_path(:twitter) %>">
                <i class="fa fa-twitter fa-fw"></i>
              </a>
              <a class="circle facebook" href="<%= user_omniauth_authorize_path(:facebook) %>">
                <i class="fa fa-facebook fa-fw"></i>
              </a>
          </div>
<% end %>